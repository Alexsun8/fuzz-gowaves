openapi: 3.0.0
info:
  title: Go Node API
  version: 1.0.0
paths:
  /go/node/healthz:
    get:
      summary: Check node health
      responses:
        '200':
          description: OK
        '500':
          description: Internal Server Error
  /go/blocks/score/at/{id}:
    get:
      summary: Get block score at a specific ID
      parameters:
        - name: id
          in: path
          description: Block ID
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: Successful operation
  /go/blocks/id/{id}:
    get:
      summary: Get block ID at a specific height
      parameters:
        - name: id
          in: path
          description: Block height
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: Successful operation
  /go/blocks/generators:
    get:
      summary: Get blocks generators
      responses:
        '200':
          description: Successful operation
  /go/blocks/first:
    get:
      summary: Get first block
      responses:
        '200':
          description: Successful operation
  /go/peers/known:
    get:
      summary: Get known peers
      responses:
        '200':
          description: Successful operation
  /go/peers/spawned:
    get:
      summary: Get spawned peers
      responses:
        '200':
          description: Successful operation
  /go/wallet/accounts:
    get:
      summary: Get wallet accounts
      responses:
        '200':
          description: Successful operation
    post:
      summary: Load wallet keys
      responses:
        '200':
          description: Successful operation
  /go/debug/snapshotStateHash/{height}:
    get:
      summary: Get snapshot state hash at a specific height
      parameters:
