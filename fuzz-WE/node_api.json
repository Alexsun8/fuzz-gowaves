      responses:
        '200':
          description: Successful operation
  /go/node/processes:
    get:
      summary: Get node processes
      responses:
        '200':
          description: Successful operation
  /go/pool/transactions:
    get:
      summary: Get pool transactions
      responses:
        '200':
          description: Successful operation
  /blocks/last:
    get:
      summary: Get last block
      responses:
        '200':
          description: Successful operation
  /blocks/height:
    get:
      summary: Get block height
      responses:
        '200':
          description: Successful operation
  /blocks/height/{id}:
