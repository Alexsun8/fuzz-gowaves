          description: Successful operation
  /blocks/at/{height}:
    get:
      summary: Get block at specific height
      parameters:
        - name: height
          in: path
          description: Block height
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: Successful operation
  /blocks/{id}:
    get:
      summary: Get block by ID
      parameters:
        - name: id
          in: path
          description: Block ID
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Successful operation
  /blocks/headers/last:
