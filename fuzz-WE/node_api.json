          in: path
          description: To sequence
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: Successful operation
  /assets/details/{id}:
    get:
      summary: Get asset details by ID
      parameters:
        - name: id
          in: path
          description: Asset ID
          required: true
          schema:
            type: integer
      responses:
        '200':
          description: Successful operation
  /assets/details:
